@model hr_erp.Web.Models.IndexViewModel

<div class="m-3 mt-5">
    <div class="row row-cols-1 row-cols-md-4 g-4">
        <div class="col p-4">
            <div class="card border-secondary h-100">
                <div class="card-body">
                    <h5 class="card-title text-center">Количество отделов</h5>
                    <p class="card-text text-center">@Model.DepartmentsCount</p>
                </div>
            </div>
        </div>
        <div class="col p-4">
            <div class="card border-secondary h-100">
                <div class="card-body">
                    <h5 class="card-title text-center">Количество рабочих мест</h5>
                    <p class="card-text text-center">@Model.VacancyCount</p>
                </div>
            </div>
        </div>
        <div class="col p-4">
            <div class="card border-secondary h-100">
                <div class="card-body">
                    <h5 class="card-title text-center">Всего сотрудников</h5>
                    <p class="card-text text-center">@Model.PermanentVacsCount</p>
                </div>
            </div>
        </div>
        <div class="col p-4">
            <div class="card border-secondary h-100">
                <div class="card-body">
                    <h5 class="card-title text-center">Всего свободных вакансий</h5>
                    <p class="card-text text-center">@Model.TemporaryVacsCount</p>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="m-3">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col p-4">
            <div class="card border-success h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Количество сотрудников</h5>
                    <p class="card-text">@Model.EmployeesCount</p>
                    <a asp-action="Employees">Подробнее...</a>
                </div>
            </div>
        </div>
        <div class="col p-4">
            <div class="card border-success h-100">
                <div class="card-body">
                    <h5 class="card-title text-center">Всего постоянных сотрудников</h5>
                    <p class="card-text text-center">@Model.PermanentEmpsCount</p>
                </div>
            </div>
        </div>
        <div class="col p-4">
            <div class="card border-success h-100">
                <div class="card-body">
                    <h5 class="card-title text-center">Всего временных сотрудников</h5>
                    <p class="card-text text-center">@Model.TemporaryEmpsCount</p>
                </div>
            </div>
        </div>
    </div>
</div>